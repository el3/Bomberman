<Level>:
    pos_hint: {'center': (.5, .5)}
    size_hint: None, .8
    width: self.height
    players_area: players_area
    timer: timer
    stats_label: stats_label

    canvas.before:
        Color:
            rgb: .3, .1, .05
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        id: players_area
        BoxLayout:
            orientation: "vertical"
            pos: (root.width+120, root.height)
            Timer:
                id: timer
            Label:
                font_size: "20sp"
                id: stats_label
        FloatLayout:
            id: players_area

<Spawn@Grass>:

<Grass@Tile>:
    canvas.before:
        Color:
            rgb: .1, .7, .15
        Rectangle:
            pos: self.pos
            size: self.size

<Block@Tile>:
    canvas.before:
        Color:
            rgb: .3, .3, .35
        Rectangle:
            pos: self.pos
            size: self.size

<Rock@Tile>:
    canvas.before:
        Color:
            rgb: .1, .1, .15
        Rectangle:
            pos: self.pos
            size: self.size
